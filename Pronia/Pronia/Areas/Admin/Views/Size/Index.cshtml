@using Pronia.Areas.ViewModels.Size
@model List<ListSizeVM>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Size Table</h4>

                <div class="table-responsive">
                    <a class="btn btn-success " asp-action="create">Create Size</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ListSizeVM sizeVM in Model)
                            {
                                count++;

                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <p>@sizeVM.Name</p>
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@sizeVM.Id" class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="Delete" asp-route-id="@sizeVM.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-email-open"></i></a>
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
