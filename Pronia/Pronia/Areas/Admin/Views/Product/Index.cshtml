@using Pronia.Areas.ViewModels



@model List<GetProductAdminVM>
@{
    int count = 0;
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Product</h4>
               <p>@Html.Raw(@TempData["FileWarning"])</p>
                <div class="table-responsive">
                    <a asp-action="create" class="btn btn-success">Create Product</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetProductAdminVM productVM in Model)
                            {
                                count++;
                                <tr>

                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/website-images/@productVM.Image" />
                                    </td>
                                    <td>
                                        @productVM.Name
                                    </td>
                                    <td>
                                        @productVM.Price
                                    </td>
                                    <td>
                                        @productVM.CategoryName
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@productVM.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="Delete" asp-route-id="@productVM.Id" class="btn btn-danger" alt="Delete"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-email-open"></i></a>

                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
